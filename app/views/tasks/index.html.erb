<h1>My tasks I have/need to do !</h1>


<ul>
  <% @tasks.each do |task| %>
    <li style="list-style-type: none"><%= check_box_tag task.id, task.title, task.completed %> <%= link_to task.title, task_path(task) %> <br>
      <%= link_to "Delete", task_path(task), method: "delete", data: { confirm: "Are you sure you want to delete?" } %></li>
  <% end %>
</ul>

 <%= link_to "Create a task", task_new_path %>

